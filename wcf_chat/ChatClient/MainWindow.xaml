<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbUserName" Height="58" Margin="334,15,0.6,0" TextWrapping="Wrap" Text="Имя пользователя" VerticalAlignment="Top"/>
        <Button x:Name="bConDiscon"    Click="Button_Click"  Content="Connect" HorizontalAlignment="Left" Margin="105,15,0,0" VerticalAlignment="Top" Width="197" Height="58"/>
        <ListBox x:Name="lbChat" Height="233" Margin="15,78,-0.4,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbMassage" Height="94" Margin="10,316,0.6,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
